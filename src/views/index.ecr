<html class="login-pf">
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/patternfly/3.24.0/css/patternfly.min.css">
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/patternfly/3.24.0/css/patternfly-additions.min.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/index.css">
	<link rel="shortcut icon" href="/images/favicon.ico" />
</head>
<body>
<span id="badge">
	<img src="/images/logo.svg" alt="CargoShorts Logo" width="100px" height="100px" />
</span>
<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<div id="brand">
				<img src="/images/brand.svg" alt="CargoShorts">
			</div>
		</div>
		<div class="col-sm-7 col-md-6 col-lg-5 login">
			<% if error %>
				<div class="alert alert-danger">
					<span class="pficon pficon-error-circle-o"></span>
					<strong>Error:</strong> <%= error %>
				</div>
			<% end %>
			<form class="form-horizontal" role="form" action="<%= !orchestrator.started? ? "/start_meeting" : "/stop_meeting" %>">
				<% if !orchestrator.started? %>
					<div class="form-group">
						<label for="meeting_id" class="col-sm-2 col-md-2 control-label">Meeting&nbsp;ID</label>
						<div class="col-sm-10 col-md-10">
							<input type="text" class="form-control" id="meeting_id" name="meeting_id" placeholder="" tabindex="1" autofocus>
						</div>
					</div>
					<div class="form-group">
						<label for="passcode" class="col-sm-2 col-md-2 control-label">Passcode</label>
						<div class="col-sm-10 col-md-10">
							<input type="text" class="form-control" id="passcode" name="passcode" placeholder="" tabindex="2">
						</div>
					</div>
					<p align="middle">OR</p>
					<div class="form-group">
						<label for="url" class="col-sm-2 col-md-2 control-label">URL</label>
						<div class="col-sm-10 col-md-10">
							<input type="text" class="form-control" id="url" name="url" placeholder="" tabindex="3">
						</div>
					</div>
				<% else %>
					<div class="alert alert-info">
						<span class="pficon pficon-info"></span>
						Currently in meeting <%= orchestrator.url %>
					</div>
				<% end %>
				<div class="form-group">
					<div class="col-xs-8 col-sm-offset-2 col-sm-6 col-md-offset-2 col-md-6">
					</div>
					<div class="col-xs-4 col-sm-4 col-md-4 submit">
						<button type="submit" class="btn btn-primary btn-lg" tabindex="4"><%= !orchestrator.started? ? "Start" : "Stop" %> Meeting</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
</body>
</html>
